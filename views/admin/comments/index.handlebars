<h1>Comments</h1>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Author</th>
      <th>Status</th>
      <th>Date</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    {{#each comments}}
    <tr>
      <th>{{id}}</th>
      <td>{{user.firstname}}</td>
      <td><input data-id="{{id}}" {{#if approveComment}}checked{{/if}} type="checkbox" name="approveComment"></td>
      <td>{{generateTime date 'MMMM Do YYYY'}}</td>
      <td>
        <form action="/admin/comments/{{id}}?_method=DELETE" method="post">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>